@model IEnumerable<LoteriaES.Models.LotteryOrderLine>

@{
    ViewBag.Title = "Detalles";
}

<h3>Detalles del pedido</h3>

<table class="table">
    <tr>
        <th>
            Id Pedido
        </th>
        <th>
            Número de Lotería
        </th>
        <th>
            Cantidad
        </th>
        <th>
            Precio
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lottery.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lottery.LotteryPrice)
        </td>
        <td>
            @Html.ActionLink("Modificar", "UpdateOrderLine", new {orderId=item.OrderId, orderLineid=item.OrderLineId }, htmlAttributes: new { @class = "btn btn-default btn-xs" })
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Volver", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
</div>