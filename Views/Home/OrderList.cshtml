@model IEnumerable<LoteriaES.Models.LotteryOrder>

@{
    ViewBag.Title = "Listado de Pedidos de Lotería";
}

<h2>OrderList</h2>

<p>
    @Html.ActionLink("Create New Order", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Id Pedido
        </th>
        <th>
            Fecha de Pedido
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.ActionLink("Detalle", "Details", new { id=item.OrderId})
        </td>
    </tr>
}

</table>
